<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        xmlns:viewModels="clr-namespace:Desktop.ViewModels"
        xmlns:converters="clr-namespace:Desktop.Converters"
        mc:Ignorable="d"
        Title="Тестовое WPF-приложение для SmartMealService" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.Resources>
        <converters:InvertBooleanConverter x:Key="InvertBooleanConverter" />
    </Window.Resources>

    <Border CornerRadius="25">
        <Grid Margin="8" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="8" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                           FontWeight="Bold"
                           FontSize="18"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Width="25" Height="25"
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="_"
                            Command="{Binding MinimizeCommand}" />
                    <Button Width="25" Height="25"
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="x"
                            Command="{Binding CloseCommand}" />
                </StackPanel>
            </Grid>

            <DataGrid Grid.Row="1"
                      IsEnabled="{Binding AppliedChanges, Converter={StaticResource InvertBooleanConverter}}"
                      Background="Transparent"
                      ItemsSource="{Binding Variables}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserSortColumns="True"
                      CanUserResizeColumns="True"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}"
                                        Header="Name" Width="100"
                                        IsReadOnly="True" />
                    <DataGridTextColumn Binding="{Binding Value, UpdateSourceTrigger=LostFocus}"
                                        Header="Value" Width="250" />
                    <DataGridTextColumn Binding="{Binding Comment, UpdateSourceTrigger=LostFocus}"
                                        Header="Comment" Width="250" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Window>